<h1><%= t(:event).pluralize %></h1>

<div id="adjourn">
  <%= calendar(@date) do |date| %>
    <%= date.day %>
    <% if @events_by_date[date] %>
      <ul>
        <% @events_by_date[date].each do |event| %>
          <li><%= link_to event.name, edit_event_path(event) %></li>
        <% end %>
      </ul>
    <% end %>
  <% end %>
</div>

<%= link_to t(:new_resource, name: t(:event)), new_event_path %>
<%= link_to t(:prev_resource, name: t(:month)), events_path(date: @date - 1.month) %>
<%= link_to t(:next_resource, name: t(:month)), events_path(date: @date + 1.month) %>
